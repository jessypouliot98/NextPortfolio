// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Comment {
  id Int @id @default(autoincrement())
  contentfulEntryId String @db.VarChar(64)
  content String
  authorName String @db.VarChar(128)
  createdAt DateTime @default(now())
  deletedAt DateTime?
  blog Blog @relation(references: [contentfulEntryId], fields: [contentfulEntryId])
}

model Blog {
  id Int @id @default(autoincrement())
  contentfulEntryId String @unique @db.VarChar(64)
  views Int
  comments Comment[] @relation()
}

model Mail {
  id Int @id @default(autoincrement())
  firstName String @db.VarChar(64)
  lastName String @db.VarChar(64)
  email String @db.VarChar(255)
  referral String? @db.VarChar(255)
  body String @db.Text()
  isRead Boolean @db.Boolean() @default(false)
  isSent Boolean @db.Boolean() @default(false)
  dump String? @db.Text()
}